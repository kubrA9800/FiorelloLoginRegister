@model SliderEditVM
@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Edit</h1>
    <div class="image">
        <img style=" margin-bottom:20px;width:50%;height:30%" src="~/img/@Model.Image" />
    </div>
    <form class="forms-sample" asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="exampleInputUsername1">Image</label>
            <input asp-for="Photo" class="form-control">
        </div>


        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <a class="btn btn-light" asp-action="Index">Back</a>
    </form>
</div>



