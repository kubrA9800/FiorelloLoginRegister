@model List<SliderVM>
@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Slider</h1>
    <a class="btn btn-success" asp-action="Create">Create</a>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Operation
                    </th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var slider in Model)
                {
                    <tr>
                        <td class="py-1">
                            <img src="~/img/@slider.Image" alt="image" />
                        </td>
                        <td>
                            <form method="post" asp-action="ChangeStatus" asp-route-id="@slider.Id">
                                @if (slider.Status)
                                {
                                    <button type="submit" style="width:15px;height:15px; background-color:chartreuse;border-radius:50%;cursor:pointer; outline:none;border:none" class="status-true"></button>
                                }
                                else
                                {
                                    <button type="submit" style="margin-top:10px;width:15px;height:15px; background-color:red;border-radius:50%; cursor:pointer;outline:none;border:none" class="status-false"></button>
                                }
                            </form>
                            

                        </td>
                        
                        <td>
                            
                            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@slider.Id">Detail</a>
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@slider.Id">Edit</a>
                            <form class="d-inline-block" method="post" asp-action="Delete" asp-route-id="@slider.Id">
                                <button type="submit" class="btn btn-outline-danger">Delete</button>

                            </form>
                        </td>

                    </tr>
                }
                
               
            </tbody>
        </table>
    </div>
</div>

