@model SliderText
@{
    ViewData["Title"] = "Edit";
}
<div class="container mt-5">
    <form class="forms-sample mt-5" asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="exampleInputUsername1">Title</label>
            <input asp-for="Title" class="form-control">
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Description</label>
            <input asp-for="Description" class="form-control">
            <span class="text-danger" asp-validation-for="Description"></span>

        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Logo</label>
            <div class="image">
                <img style=" margin-bottom:20px;width:30%;height:15%" src="~/img/@Model.Img" />
            </div>
        </div>
        <div class="form-group">

            <input asp-for="Photo" class="form-control">
            <span class="text-danger" asp-validation-for="Photo"></span>

        </div>
        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <a class="btn btn-light" asp-action="Index">Back</a>

    </form>

</div>



