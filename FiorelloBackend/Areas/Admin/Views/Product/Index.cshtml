
@model Paginate<ProductVM>
@{
    ViewData["Title"] = "Index";
   
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Products</h1>
    <a class="btn btn-success" asp-action="Create">Create</a>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Operation
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Datas)
                {
                    <tr>
                        <td class="py-1">
                            @if (product.Image is not null)
                            {
                                <img src="~/img/@product.Image" alt="image" />

                            }

                        </td>
                        <td>
                           @product.Name
                        </td>
                        <td>
                            @product.Description
                        </td>
                        <td>
                            @product.Price
                        </td>
                        <td>
                            @product.CategoryName
                        </td>
                       

                        <td>

                            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@product.Id">Detail</a>
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@product.Id">Edit</a>
                            <form class="d-inline-block" method="post" asp-action="Delete" asp-route-id="@product.Id">
                                <button type="submit" class="btn btn-outline-danger">Delete</button>

                            </form>
                        </td>

                    </tr>
                }


            </tbody>
        </table>
    </div>

    <nav aria-label="...">
        <ul class="pagination mt-4 d-flex justify-content-center">
            <li class="page-item  @(Model.HasPrevious ? "":"disabled")">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage-1)" tabindex="-1">Previous</a>
            </li>
            @for (int i = 1; i <= Model.TotalPage; i++)
            {
                <li class="page-item @(Model.CurrentPage == i ? " active":"")">
                    <a class="page-link" asp-action="Index" asp-route-page="@i">@i<span class="sr-only">(current)</span></a>
                </li>

            }
            
            <li class="page-item @(Model.HasNext ? "" : "disabled")">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage+1)">Next</a>
            </li>
        </ul>
    </nav>
</div>


