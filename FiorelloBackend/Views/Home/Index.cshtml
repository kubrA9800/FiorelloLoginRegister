@using FiorelloBackend.ViewModels.Home;
@model HomeVm

@{
    ViewData["Title"] = "Home Page";
}

<!-- MAIN START -->

    <main>

        <!-- SLIDER START -->

        <section id="slider">
            <div class="owl-carousel slider">
                @foreach (var item in Model.Sliders)
            {
                 <div> <img src="~/img/@item.Image" alt=""> </div>
            }
               
            </div>
            <div class="container context pl-lg-5 ml-lg-3">
                <div class="row">

                
                     <div class="col-lg-5">
                        <div class="text">
                            @Html.Raw(Model.SliderTexts.Title)
                            
                            <p class="text-black-50 d-none d-sm-block">@Model.SliderTexts.Description </p>
                        </div>
                        <div class="img">
                            <img src="~/img/@Model.SliderTexts.Img" alt="">
                        </div>
                    </div>
                
                   
                </div>
            </div>
        </section>

        <!-- SLIDER END -->

        <!-- PRODUCTS START -->

        <section id="products">
            <div class="container">
                <div class="row pt-5">
                    <div class="col-12 d-flex justify-content-between">
                        <ul class="category-mobile d-md-none list-unstyled">
                            <li>
                                <a href="" class="categories mr-2">Categories</a>
                                <i class="fas fa-caret-down"></i>
                                <ul class="category list-unstyled" style="display: none;">
                                    <li><a href="" data-id="all">All</a></li>
                                    <li><a href="" data-id="popular">Popular</a></li>
                                    <li><a href="" data-id="winter">Winter</a></li>
                                    <li><a href="" data-id="various">Various</a></li>
                                    <li><a href="" data-id="exotic">Exotic</a></li>
                                    <li><a href="" data-id="green">Greens</a></li>
                                    <li><a href="" data-id="cactuse">Cactuses</a></li>
                                </ul>
                            </li>
                        </ul>
                        <ul class="category d-none d-md-flex list-unstyled">
                            <li><a href="" data-id="all">All</a></li>
                            @foreach (var category in Model.Categories)
                        {
                            @if (category.Products!= null)
                            {
                                <li><a href="" data-id="@category.Id">@category.Name</a></li>
                            }
                            
                        }
                            
                            
                        </ul>
                        <ul class="list-unstyled">
                            <li>
                                <a href="" class="mr-2">Filter</a>
                                <i class="fas fa-caret-down"></i>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="row">
                   
                    <partial name="_ProductPartial" model="@Model.Products"/>
                    
                </div>
            </div>
        </section>

        <!-- PRODUCTS END -->

        <!-- ABOUT START -->

        <section id="about">
            <div class="container py-5">
                <div class="row py-5">
                    <div class="col-lg-6">
                        <div class="img">
                            <img src="~/img/@Model.Abouts.Image" class="img-fluid" alt="">
                            <div
                                class="player position-absolute rounded-circle d-flex align-items-center justify-content-center">
                                <i class="fas fa-play fa-lg"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="about-text mt-5 mt-lg-0 px-lg-5">
                            @Html.Raw(Model.Abouts.Title)
                            <p class="py-3">@Model.Abouts.Description</p>
                            <ul class="list-unstyled">
                                @foreach (var text in Model.HomeAboutIcons)
                            {
                                <li class="mt-3"><img src="~/img/@text.Image" class="mr-2" alt="">@text.Text</li class="mt-3">
                            }
                                
                               
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- ABOUT END -->

        <!-- EXPERTS START -->

        <section id="experts">
            <div class="container">
                <div class="row py-5">
                    <div class="offset-lg-3 col-lg-6">
                        <div class="section-title">
                            <h1>Flower Experts</h1>
                            <p class="text-black-50">A perfect blend of creativity, energy, communication, happiness and
                                love. Let us arrange
                                a smile for you.</p>
                        </div>
                    </div>
                </div>
                <div class="row pb-5">
                    @foreach (var expert in Model.Experts)
                {
                    <div class="col-md-6 col-lg-3">
                        <div class="item text-center">
                            <div class="img">
                                <img src="~/img/@expert.Image" class="img-fluid rounded-circle" alt="">
                            </div>
                            <div class="text mt-3">
                                <h6>@expert.Name</h6>
                                <p class="text-black-50">@expert.Position</p>
                            </div>
                        </div>
                    </div>
                }
                    
                   
                    <div class="col-lg-3"></div>
                    <div class="col-lg-3"></div>
                    <div class="col-lg-3"></div>
                </div>
            </div>
        </section>

        <!-- EXPERTS END -->

        <!-- SUBSCRIBE START -->

        <section id="subscribe" style="background-image:url(../img/@Model.HomeSubscribes.Image)">
            <div class="container py-5">
                <div class="row py-5">
                    <div class="col-12">
                        <div class="content text-center py-5">
                            <h3>@Model.HomeSubscribes.Title</h3>
                            <div class="form-group d-flex justify-content-center flex-wrap mt-5">
                                <input type="email" placeholder="Email Address" class="form-control-lg rounded-0">
                                <button class="btn btn-danger btn-lg rounded-0 px-5 mt-3 mt-sm-0">Subscribe</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- SUBSCRIBE END -->

        <!-- BLOG START -->

        <section id="blog">
            <div class="container">
                <div class="row py-5">
                    <div class="offset-lg-3 col-lg-6">
                        <div class="section-title">
                            <h1>From our Blog</h1>
                            <p class="text-black-50">A perfect blend of creativity, energy, communication, happiness and
                                love. Let us arrange
                                a smile for you.</p>
                        </div>
                    </div>
                </div>
                <div class="row pb-5">
                    @foreach (var blog in Model.Blogs)
                {
                     <div class="col-md-6 col-lg-4">
                        <div class="item">
                            <div class="img position-relative">
                                <img src="~/img/@blog.Image" class="img-fluid" alt="">
                                @if (blog.CreatedDate != null)
                                {
                                    <div class="date rounded bg-light position-absolute py-1 px-2">
                                       <span>@blog.CreatedDate?.ToString("MM-dd-yyyy")</span>
                                    </div>
                                }

                            </div>
                            <div class="text mt-3 text-center px-5">
                                <h5>@blog.Title</h5>
                                <p class="text-black-50">@blog.Description</p>
                            </div>
                        </div>
                    </div>
                }
                   
                   
                </div>
            </div>
        </section>

        <!-- BLOG END -->

        <!-- SAY START -->

        <section id="say">
            <div class="container">
                <div class="row py-5 justify-content-center">
                    <div class="col-md-8 col-xl-6">
                        <div class="owl-carousel say">
                            @foreach (var item in Model.HomeSays)
                        {
                          <div>
                                <div class="item text-center">
                                    <div class="img d-flex justify-content-center">
                                        <img src="~/img/@item.Image" alt="">
                                    </div>
                                    <div class="text text-muted pt-3 pb-5">
                                        <i>@item.Description </i>
                                    </div>
                                    <div class="author">
                                        <h6>@item.Name</h6>
                                        <p class="text-black-50">Florist</p>
                                    </div>
                                </div>
                            </div>  
                        }
                            
                            
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- SAY END -->

        <!-- INSTAGRAM START -->

        <section id="instagram">
            <div class="owl-carousel instagram">
                @foreach (var item in Model.HomeInstagrams)
            {
                 <div><img src="~/img/@item.Image" class="img-fluid" alt=""></div>
            }
               
              
            </div>
            <div class="hastag bg-light text-muted py-2 px-3">
                #FIORELLO
            </div>
        </section>

        <!-- INSTAGRAM END -->

    </main>
    @section script{
        <script src="~/js/basket.js"></script>
    }
    <!-- MAIN END -->