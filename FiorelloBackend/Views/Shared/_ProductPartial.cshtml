@model List<Product>



@foreach (var product in Model)
{
    <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
        <div class="product-item text-center" data-id="@product.CategoryId" data-productId="@product.Id">
            <div class="img">
                <a href="">
                    @if (product.Images.Count() != 0)
                    {
                        <img src="~/img/@product.Images.FirstOrDefault(m=>m.IsMain).Image" class="img-fluid" alt="">
                    }

                </a>
            </div>
            <div class="title mt-3">
                <h6>@product.Name</h6>
            </div>
            <div class="price">
                <span class="text-black-50"><a>Add to cart</a></span>
                <span class="text-black-50">$@product.Price</span>
            </div>
        </div>
    </div>
}
